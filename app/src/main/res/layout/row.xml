<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/card_view_image"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/A_Quite_Place" />

        <TextView
            android:id="@+id/card_view_image_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="10dp"
            android:text="Movie name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/card_view_image_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Gender:"
            android:textSize="20dp" />
        #
        <!--<TextView-->
        <!--android:id="@+id/card_view_image_released_title"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10dp"-->
        <!--android:text="Released:"-->
        <!--android:textSize="20dp"/>-->
        <!--<TextView-->
        <!--android:id="@+id/card_view_image_director_title"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_margin="10dp"-->
        <!--android:text="Director:"-->
        <!--android:textSize="20dp" />-->

        <TextView
            android:id="@+id/card_view_image_released"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Released:"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/card_view_image_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Director:"
            android:textSize="20dp" />


    </LinearLayout>

</android.support.v7.widget.CardView>

